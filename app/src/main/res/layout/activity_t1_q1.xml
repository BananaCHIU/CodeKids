<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_t1_q1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorOnPrimary"
    tools:context=".Learn.T1Q1Activity">

    <com.google.android.material.chip.Chip
        android:id="@+id/chip_a2"
        style="@style/Widget.MaterialComponents.Chip.Choice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="70dp"
        android:text='" Hi ! "'
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintStart_toStartOf="parent"
        app:textEndPadding="10dp"
        app:textStartPadding="13dp" />

    <com.google.android.material.chip.Chip
        android:id="@+id/chip_a1"
        style="@style/Widget.MaterialComponents.Chip.Choice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="70dp"
        android:text='" My Name is Doggy !"'
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintStart_toStartOf="parent"
        app:textEndPadding="10dp"
        app:textStartPadding="13dp" />

    <TextView
        android:id="@+id/T1Q1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:lineSpacingExtra="12sp"
        android:text="class MyClass {\n    public static void main(String[ ] args) {\n          Speak(                                          )       \n   }\n }"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/chip_a1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.83" />

    <TextView
        android:id="@+id/T1Q1Ans"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="60px"
        android:layout_marginEnd="200px"
        android:text="Drag to Here"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/T1Q1"
        app:layout_constraintEnd_toEndOf="@+id/T1Q1"
        app:layout_constraintStart_toStartOf="@+id/T1Q1"
        app:layout_constraintTop_toTopOf="@+id/T1Q1" />

</androidx.constraintlayout.widget.ConstraintLayout>